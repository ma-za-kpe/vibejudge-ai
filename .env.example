# VibeJudge AI â€” Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================================
# AWS Configuration
# ============================================================

# AWS Region (us-east-1 recommended for Bedrock availability)
AWS_REGION=us-east-1

# AWS Profile (for local development)
AWS_PROFILE=default

# ============================================================
# DynamoDB
# ============================================================

# DynamoDB table name (must match template.yaml)
DYNAMODB_TABLE_NAME=VibeJudgeTable

# ============================================================
# S3
# ============================================================

# S3 bucket for artifacts (optional, for future use)
S3_BUCKET_NAME=vibejudge-artifacts-dev

# ============================================================
# Bedrock Configuration
# ============================================================

# Default models for agents (can override per agent)
BEDROCK_MODEL_BUG_HUNTER=amazon.nova-lite-v1:0
BEDROCK_MODEL_PERFORMANCE=amazon.nova-lite-v1:0
BEDROCK_MODEL_INNOVATION=anthropic.claude-sonnet-4-20250514
BEDROCK_MODEL_AI_DETECTION=amazon.nova-micro-v1:0

# Bedrock inference parameters
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.3

# ============================================================
# API Configuration
# ============================================================

# API version
API_VERSION=1.0.0

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================
# Logging
# ============================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable structured JSON logging
STRUCTURED_LOGGING=true

# ============================================================
# GitHub API
# ============================================================

# GitHub Personal Access Token (for Actions API, optional)
# Only needed if analyzing private repos or to avoid rate limits
GITHUB_TOKEN=

# ============================================================
# Analysis Configuration
# ============================================================

# Maximum repo size to clone (MB)
MAX_REPO_SIZE_MB=500

# Analysis timeout per submission (seconds)
ANALYSIS_TIMEOUT_SECONDS=600

# Maximum files to include in agent context
MAX_CONTEXT_FILES=50

# Maximum lines per file in context
MAX_LINES_PER_FILE=500

# ============================================================
# Cost Limits
# ============================================================

# Default budget limit per hackathon (USD)
DEFAULT_BUDGET_LIMIT_USD=50.00

# Maximum cost per submission (USD, safety limit)
MAX_COST_PER_SUBMISSION_USD=1.00

# ============================================================
# Local Development
# ============================================================

# Local API server port
API_PORT=8000

# Enable hot reload
API_RELOAD=true

# Enable debug mode
DEBUG=false

# ============================================================
# Testing
# ============================================================

# Use mocked AWS services in tests
MOTO_MOCK_AWS=true

# Test DynamoDB table name
TEST_DYNAMODB_TABLE_NAME=VibeJudgeTable-Test
