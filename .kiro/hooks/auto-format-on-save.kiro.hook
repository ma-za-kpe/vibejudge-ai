{
  "enabled": true,
  "name": "Auto Format on Save",
  "description": "Automatically fix code style issues when Python files are saved",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/**/*.py",
      "tests/**/*.py"
    ]
  },
  "then": {
    "type": "runCommand",
    "command": ".venv/bin/ruff check --fix src/ tests/ || python -m ruff check --fix src/ tests/",
    "timeout": 30
  }
}